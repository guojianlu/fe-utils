{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ES5",
    "noEmitOnError": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "fe-utils": ["./src/index"]
    }
  },
  "include": ["src", "demo", "__tests__"],
  "exclude": ["node_modules", "es", "lib", "dist"]
}
